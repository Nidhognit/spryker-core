        "@spryker/frontend-config.tslint": "~0.0.5",
        "codelyzer": "~5.1.2",
        "prettier": "~2.0.5",
        "rxjs": "~6.6.0",
        "tslint": "~6.1.3",
        "typescript": "~3.8.3"
