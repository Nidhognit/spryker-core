{
    "private": true,
    "name": "spryker-master-suite",
    "description": "Spryker Master Suite",
    "author": {
        "name": "Spryker Systems GmbH",
        "email": "info@spryker.com",
        "url": "https://spryker.com/"
    },
    "scripts": {
        "formatter": "npm run formatter:run -- --check",
        "formatter:fix": "npm run formatter:run -- --write",
        "formatter:run": "prettier --config node_modules/@spryker/frontend-config.prettier/.prettierrc.json \"**/*.(scss|css|less|js|ts|json|html|yml|yaml|xml)\"",
        "mp:eslint": "eslint -c .eslintrc.mp.json Bundles/*/src/Spryker/Zed/*/Presentation/Components/**/*.ts Bundles/*/src/Spryker/Zed/*/Presentation/Components/**/*.html",
        "mp:eslint:fix": "eslint -c .eslintrc.mp.json Bundles/*/src/Spryker/Zed/*/Presentation/Components/**/*.ts Bundles/*/src/Spryker/Zed/*/Presentation/Components/**/*.html --fix"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "devDependencies": {
        "@angular/compiler": "~15.0.3",
        "@angular/core": "~15.0.3",
        "@angular-eslint/builder": "~15.0.0",
        "@angular-eslint/eslint-plugin": "~15.0.0",
        "@angular-eslint/eslint-plugin-template": "~15.0.0",
        "@angular-eslint/schematics": "~15.0.0",
        "@angular-eslint/template-parser": "~15.0.0",
        "@prettier/plugin-xml": "~0.13.1",
        "@spryker/frontend-config.prettier": "~0.0.5",
        "@spryker/frontend-config.eslint": "~0.0.2",
        "@typescript-eslint/eslint-plugin": "~5.44.0",
        "@typescript-eslint/parser": "~5.44.0",
        "prettier": "~2.7.1",
        "rxjs": "~7.5.7",
        "eslint": "~8.28.0",
        "eslint-plugin-deprecation": "~1.3.3",
        "typescript": "~4.8.4"
    }
}
