{% extends '@Gui/layout/layout.twig' %}

{% set page_title = 'Merchant Order Overview' %}
{% block head_title page_title %}
{% block section_title page_title %}

{% block action %}
    {{ backActionButton('/merchant-sales-order-merchant-user-gui', 'Back to Orders' | trans) }}
    <a class="btn btn-sm safe-submit btn-primary" href="{{ url('/merchant-sales-return-merchant-user-gui/create', {'id-merchant-order': merchantOrder.idMerchantOrder}) }}">
        {{ 'Return' | trans }}
    </a>
{% endblock %}

{% block content %}
    <div id="order-overview">{% include '@MerchantSalesOrderMerchantUserGui/Detail/boxes/order-overview.twig' %}</div>
    <div id="customer">{% include '@MerchantSalesOrderMerchantUserGui/Detail/boxes/customer.twig' %}</div>
    <div id="items">{% include '@MerchantSalesOrderMerchantUserGui/Detail/boxes/items.twig' %}</div>
    {% for blockName, externalBlock in blocks %}
        {% if externalBlock %}
            <div id="{{ blockName }}">{{ externalBlock | raw }}</div>
        {% endif %}
    {% endfor %}
{% endblock %}
{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-sales-main.css') }}">
{% endblock %}
